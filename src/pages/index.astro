---
import Layout from '../components/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

// Get all projects and filter for featured ones
const allProjects = await getCollection('projects');
const featuredProjects = allProjects.filter(project => project.data.featured);
const recentProjects = allProjects
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 6);

// Get project counts by category
const projectCounts = {
  ai: allProjects.filter(p => p.data.tags.includes('ai')).length,
  gaming: allProjects.filter(p => p.data.tags.includes('gaming')).length,
  research: allProjects.filter(p => p.data.tags.includes('research')).length,
  codingMisc: allProjects.filter(p => p.data.tags.includes('coding-misc')).length,
  webDev: allProjects.filter(p => p.data.tags.includes('web-dev')).length,
  total: allProjects.length
};
---

<Layout title="Your Portfolio - AI, Gaming & Development Projects">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Welcome to My Portfolio</h1>
      <p class="hero-description">
        Exploring the intersection of artificial intelligence, game development, and creative coding. 
        Here you'll find my projects spanning machine learning, interactive experiences, and research.
      </p>
      <div class="stats">
        <div class="stat">
          <span class="stat-number">{projectCounts.total}</span>
          <span class="stat-label">Total Projects</span>
        </div>
        <div class="stat">
          <span class="stat-number">{projectCounts.ai}</span>
          <span class="stat-label">AI Projects</span>
        </div>
        <div class="stat">
          <span class="stat-number">{projectCounts.gaming}</span>
          <span class="stat-label">Gaming Projects</span>
        </div>
        <div class="stat">
          <span class="stat-number">{projectCounts.research}</span>
          <span class="stat-label">Research</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  {featuredProjects.length > 0 && (
    <section class="featured-section">
      <h2>Featured Projects</h2>
      <div class="projects-grid">
        {featuredProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            tags={project.data.tags}
            date={project.data.date}
            status={project.data.status}
            liveUrl={project.data.liveUrl}
            downloadUrl={project.data.downloadUrl}
            githubUrl={project.data.githubUrl}
            images={project.data.images}
            technologies={project.data.technologies}
            embedType={project.data.embedType}
            slug={project.slug}
            featured={project.data.featured}
          />
        ))}
      </div>
    </section>
  )}

  <!-- Recent Projects Section -->
  <section class="recent-section">
    <div class="section-header">
      <h2>Recent Projects</h2>
      <a href="/all-projects" class="view-all-btn">View All Projects â†’</a>
    </div>
    <div class="projects-grid">
      {recentProjects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          tags={project.data.tags}
          date={project.data.date}
          status={project.data.status}
          liveUrl={project.data.liveUrl}
          downloadUrl={project.data.downloadUrl}
          githubUrl={project.data.githubUrl}
          images={project.data.images}
          technologies={project.data.technologies}
          embedType={project.data.embedType}
          slug={project.slug}
          featured={project.data.featured}
        />
      ))}
    </div>
  </section>

  <!-- Quick Navigation Section -->
  <section class="nav-section">
    <h2>Explore by Category</h2>
    <div class="category-cards">
      <a href="/ai" class="category-card">
        <div class="category-icon">ðŸ¤–</div>
        <h3>AI Projects</h3>
        <p>Machine learning, neural networks, and intelligent systems</p>
        <span class="project-count">{projectCounts.ai} projects</span>
      </a>
      
      <a href="/gaming" class="category-card">
        <div class="category-icon">ðŸŽ®</div>
        <h3>Gaming</h3>
        <p>Game development, interactive experiences, and game AI</p>
        <span class="project-count">{projectCounts.gaming} projects</span>
      </a>
      
      <a href="/research" class="category-card">
        <div class="category-icon">ðŸ”¬</div>
        <h3>Research</h3>
        <p>Academic projects, experiments, and explorations</p>
        <span class="project-count">{projectCounts.research} projects</span>
      </a>
      
      <a href="/coding-misc" class="category-card">
        <div class="category-icon">ðŸ’»</div>
        <h3>Coding Misc</h3>
        <p>WebGL animations, creative coding, and experiments</p>
        <span class="project-count">{projectCounts.codingMisc} projects</span>
      </a>
    </div>
  </section>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    margin: -2rem -20px 3rem -20px;
  }
  
  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }
  
  .hero-description {
    font-size: 1.2rem;
    max-width: 600px;
    margin: 0 auto 2rem auto;
    opacity: 0.9;
    line-height: 1.6;
  }
  
  .stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-top: 2rem;
  }
  
  .stat {
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1;
  }
  
  .stat-label {
    font-size: 0.9rem;
    opacity: 0.8;
  }
  
  .featured-section,
  .recent-section,
  .nav-section {
    margin: 4rem 0;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }
  
  .section-header h2 {
    font-size: 2rem;
    margin: 0;
    color: #1f2937;
  }
  
  .view-all-btn {
    color: #2563eb;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
  }
  
  .view-all-btn:hover {
    color: #1d4ed8;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }
  
  .nav-section h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
    color: #1f2937;
  }
  
  .category-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .category-card {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    text-decoration: none;
    color: inherit;
    border: 2px solid transparent;
    transition: all 0.3s;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .category-card:hover {
    transform: translateY(-4px);
    border-color: #2563eb;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }
  
  .category-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .category-card h3 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
    font-size: 1.25rem;
  }
  
  .category-card p {
    color: #6b7280;
    margin: 0 0 1rem 0;
    line-height: 1.5;
  }
  
  .project-count {
    display: inline-block;
    background: #e0e7ff;
    color: #3730a3;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
  }
  
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2rem;
    }
    
    .hero-description {
      font-size: 1rem;
    }
    
    .stats {
      gap: 1.5rem;
    }
    
    .stat-number {
      font-size: 2rem;
    }
    
    .projects-grid {
      grid-template-columns: 1fr;
    }
    
    .section-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>