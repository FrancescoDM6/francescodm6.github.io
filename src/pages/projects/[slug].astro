---
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

// Function to get the correct URL for each tag
function getTagUrl(tag: string) {
    const tagMap: Record<string, string> = {
        'ai': '/ai',
        'gaming': '/gaming',
        'research': '/research',
        'coding-misc': '/coding-misc',
        'web-dev': '/web-dev'
    };
    return tagMap[tag] || `/${tag}`;
}
---

<Layout title={`${project.data.title} - Portfolio`} description={project.data.description}>
  <div class="project-detail">
    <!-- Back Navigation -->
    <div class="back-nav">
      <a href="/" class="back-btn">‚Üê Back to Projects</a>
    </div>

    <!-- Project Header -->
    <header class="project-header">
      <div class="project-meta">
        <h1>{project.data.title}</h1>
        <div class="project-info">
          <span class={`status status-${project.data.status}`}>{project.data.status}</span>
          <span class="date">{project.data.date.toLocaleDateString()}</span>
          {project.data.featured && <span class="featured-badge">‚≠ê Featured</span>}
        </div>
      </div>
      
      <p class="project-description">{project.data.description}</p>
      
      <!-- Tags -->
      <div class="tags">
        {project.data.tags.map((tag) => (
          <a href={getTagUrl(tag)} class="tag">{tag}</a>
        ))}
      </div>
    </header>

    <!-- Project Actions -->
    <div class="project-actions">
      {project.data.embedType !== 'none' && project.data.liveUrl && (
        <a href={project.data.liveUrl} class="btn btn-primary" target="_blank">
          {project.data.embedType === 'game' ? 'üéÆ Play Game' : 
           project.data.embedType === 'animation' ? 'üé® View Animation' : 'üîó View Demo'}
        </a>
      )}
      {project.data.githubUrl && (
        <a href={project.data.githubUrl} class="btn btn-secondary" target="_blank">
          üìÇ GitHub Repository
        </a>
      )}
      {project.data.downloadUrl && (
        <a href={project.data.downloadUrl} class="btn btn-secondary" target="_blank">
          üì• Download
        </a>
      )}
    </div>

    <!-- Project Images -->
    {project.data.images && project.data.images.length > 0 && (
      <div class="project-gallery">
        {project.data.images.map((image, index) => (
          <div class="gallery-item">
            <img src={image} alt={`${project.data.title} screenshot ${index + 1}`} loading="lazy" />
          </div>
        ))}
      </div>
    )}

    <!-- Technologies -->
    {project.data.technologies && project.data.technologies.length > 0 && (
      <div class="technologies-section">
        <h2>Technologies Used</h2>
        <div class="tech-list">
          {project.data.technologies.map((tech) => (
            <span class="tech-item">{tech}</span>
          ))}
        </div>
      </div>
    )}

    <!-- Embedded Content -->
    {project.data.embedType !== 'none' && project.data.embedPath && (
      <div class="embed-section">
        <h2>
          {project.data.embedType === 'game' ? 'Play Game' : 
           project.data.embedType === 'animation' ? 'View Animation' : 'Demo'}
        </h2>
        <div class="embed-container">
          <iframe src={project.data.embedPath} title={project.data.title}></iframe>
        </div>
      </div>
    )}

    <!-- Project Content (Markdown) -->
    <div class="project-content">
      <Content />
    </div>
  </div>
</Layout>

<style>
  .project-detail {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .back-nav {
    margin-bottom: 3rem;
  }

  .back-btn {
    color: rgba(220, 239, 243, 0.7);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.25rem;
    border: 1px solid var(--border);
    border-radius: 25px;
    background: var(--card-bg);
  }

  .back-btn:hover {
    color: var(--primary);
    border-color: var(--primary);
    background: rgba(175, 203, 207, 0.1);
    transform: translateX(-4px);
  }

  .project-header {
    margin-bottom: 4rem;
    padding: 3rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 24px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
  }

  .project-meta h1 {
    font-size: 3rem;
    color: var(--text);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .project-info {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .status {
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: capitalize;
    border: 1px solid transparent;
  }

  .status-completed { 
    background: rgba(175, 203, 207, 0.2); 
    color: var(--primary); 
    border-color: rgba(175, 203, 207, 0.3);
  }
  .status-in-progress { 
    background: rgba(124, 110, 169, 0.2); 
    color: var(--accent); 
    border-color: rgba(124, 110, 169, 0.3);
  }
  .status-planned { 
    background: rgba(62, 66, 104, 0.3); 
    color: var(--secondary); 
    border-color: rgba(62, 66, 104, 0.4);
  }

  .date {
    color: rgba(220, 239, 243, 0.6);
    font-size: 1rem;
    font-weight: 500;
  }

  .featured-badge {
    background: var(--accent);
    color: var(--text);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.85rem;
    font-weight: 600;
    box-shadow: 0 2px 8px rgba(124, 110, 169, 0.3);
  }

  .project-description {
    font-size: 1.25rem;
    color: rgba(220, 239, 243, 0.8);
    line-height: 1.7;
    margin-bottom: 2rem;
    font-weight: 400;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tag {
    background: rgba(175, 203, 207, 0.15);
    color: var(--primary);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 1px solid rgba(175, 203, 207, 0.2);
  }

  .tag:hover {
    background: rgba(175, 203, 207, 0.25);
    color: var(--text);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(175, 203, 207, 0.2);
    border-color: var(--primary);
  }

  .project-actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 4rem;
    flex-wrap: wrap;
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    border: 1px solid transparent;
  }

    .btn-primary {
    background: var(--primary);
    color: var(--background);
    border-color: var(--primary);
  }

  .btn-primary:hover {
    background: var(--text);
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(175, 203, 207, 0.3);
  }

  .btn-secondary {
    background: rgba(62, 66, 104, 0.4);
    color: var(--text);
    border-color: var(--secondary);
  }

  .btn-secondary:hover {
    background: var(--secondary);
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(62, 66, 104, 0.3);
  }

  .project-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .gallery-item {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
    border: 1px solid var(--border);
  }

  .gallery-item img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.05);
  }

  .technologies-section, .embed-section {
    margin-bottom: 4rem;
  }

  .technologies-section h2, .embed-section h2 {
    font-size: 2rem;
    color: var(--text);
    margin-bottom: 1.5rem;
    font-weight: 600;
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .tech-item {
    background: rgba(62, 66, 104, 0.3);
    color: var(--text);
    padding: 0.75rem 1.25rem;
    border-radius: 25px;
    font-weight: 600;
    font-size: 0.95rem;
    border: 1px solid rgba(62, 66, 104, 0.4);
  }

  .embed-container {
    width: 100%;
    height: 600px;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
    border: 1px solid var(--border);
  }

  .embed-container iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  .project-content {
    background: var(--card-bg);
    padding: 3rem;
    border-radius: 20px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
    border: 1px solid var(--border);
    line-height: 1.8;
  }

  .project-content :global(h1),
  .project-content :global(h2),
  .project-content :global(h3) {
    color: var(--text);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .project-content :global(h1) { font-size: 2rem; }
  .project-content :global(h2) { font-size: 1.6rem; }
  .project-content :global(h3) { font-size: 1.3rem; }

  .project-content :global(p) {
    margin-bottom: 1.5rem;
    color: rgba(220, 239, 243, 0.8);
    font-size: 1.05rem;
  }

  .project-content :global(ul),
  .project-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
    color: rgba(220, 239, 243, 0.8);
  }

  .project-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .project-content :global(strong) {
    color: var(--primary);
    font-weight: 700;
  }

  .project-content :global(code) {
    background: rgba(62, 66, 104, 0.3);
    color: var(--accent);
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    font-size: 0.9rem;
    border: 1px solid rgba(62, 66, 104, 0.4);
  }

  @media (max-width: 768px) {
    .project-header {
      padding: 2rem 1.5rem;
    }
    
    .project-meta h1 {
      font-size: 2.25rem;
    }

    .project-info {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .project-actions {
      flex-direction: column;
    }

    .btn {
      justify-content: center;
      padding: 0.875rem 1.5rem;
    }

    .project-gallery {
      grid-template-columns: 1fr;
    }

    .embed-container {
      height: 400px;
    }

    .project-content {
      padding: 2rem 1.5rem;
    }
  }
</style>