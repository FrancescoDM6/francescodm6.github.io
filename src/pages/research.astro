---
import Layout from '../components/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const researchProjects = allProjects
  .filter(project => project.data.tags.includes('research'))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Research Projects - Portfolio" description="Academic research and experimental projects">
  <div class="page-header">
    <h1>ðŸ”¬ Research Projects</h1>
    <p class="page-description">
      Academic research, experimental projects, and exploratory investigations. 
      From formal research papers to proof-of-concept implementations.
    </p>
    <div class="page-stats">
      <span class="stat">{researchProjects.length} projects</span>
    </div>
  </div>

  {researchProjects.length > 0 ? (
    <div class="projects-grid">
      {researchProjects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          tags={project.data.tags}
          date={project.data.date}
          status={project.data.status}
          liveUrl={project.data.liveUrl}
          downloadUrl={project.data.downloadUrl}
          githubUrl={project.data.githubUrl}
          images={project.data.images}
          technologies={project.data.technologies}
          embedType={project.data.embedType}
          slug={project.slug}
          featured={project.data.featured}
        />
      ))}
    </div>
  ) : (
    <div class="empty-state">
      <h3>No research projects yet</h3>
      <p>Check back soon for academic research and experimental projects!</p>
    </div>
  )}
</Layout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
  }
  
  .page-header h1 {
    font-size: 2.5rem;
    color: #1f2937;
    margin-bottom: 1rem;
  }
  
  .page-description {
    font-size: 1.1rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto 1rem auto;
    line-height: 1.6;
  }
  
  .page-stats {
    margin-top: 1rem;
  }
  
  .stat {
    background: #e0e7ff;
    color: #3730a3;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 500;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #6b7280;
  }
  
  .empty-state h3 {
    margin-bottom: 0.5rem;
    color: #374151;
  }
  
  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }
    
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>