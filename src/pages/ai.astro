---
import Layout from '../components/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

// Get all AI projects
const allProjects = await getCollection('projects');
const aiProjects = allProjects
  .filter(project => project.data.tags.includes('ai'))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="AI Projects - Portfolio" description="Artificial intelligence and machine learning projects">
  <div class="page-header">
    <div class="header-content">
      <div class="header-icon">ü§ñ</div>
      <h1>AI Projects</h1>
      <p class="page-description">
        Exploring artificial intelligence, machine learning, and intelligent systems. 
        From neural networks to reinforcement learning applications.
      </p>
      <div class="page-stats">
        <span class="stat">{aiProjects.length} projects</span>
      </div>
    </div>
  </div>

  {aiProjects.length > 0 ? (
    <div class="projects-grid">
      {aiProjects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          tags={project.data.tags}
          date={project.data.date}
          status={project.data.status}
          liveUrl={project.data.liveUrl}
          downloadUrl={project.data.downloadUrl}
          githubUrl={project.data.githubUrl}
          images={project.data.images}
          technologies={project.data.technologies}
          embedType={project.data.embedType}
          slug={project.slug}
          featured={project.data.featured}
        />
      ))}
    </div>
  ) : (
    <div class="empty-state">
      <div class="empty-icon">ü§ñ</div>
      <h3>No AI projects yet</h3>
      <p>Check back soon for artificial intelligence and machine learning projects!</p>
      <a href="/" class="back-home-btn">‚Üê Back to Home</a>
    </div>
  )}
</Layout>

<style>
    .page-header {
    text-align: center;
    margin-bottom: 4rem;
    padding: 3rem 0;
    background: linear-gradient(135deg, rgba(62, 66, 104, 0.3) 0%, rgba(124, 110, 169, 0.2) 100%);
    border-radius: 24px;
    border: 1px solid var(--border);
    position: relative;
    overflow: hidden;
  }
  
  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="%23afcbcf" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23dots)"/></svg>');
    pointer-events: none;
  }
  
  .header-content {
    position: relative;
    z-index: 1;
  }
  
  .header-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    display: block;
  }
  
  .page-header h1 {
    font-size: 3rem;
    color: var(--text);
    margin-bottom: 1rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }
  
  .page-description {
    font-size: 1.1rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto 1rem auto;
    line-height: 1.6;
  }
  
  .page-stats {
    margin-top: 1rem;
  }
  
  .stat {
    background: #e0e7ff;
    color: #3730a3;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 500;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #6b7280;
  }
  
  .empty-state h3 {
    margin-bottom: 0.5rem;
    color: #374151;
  }
  
  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }
    
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>